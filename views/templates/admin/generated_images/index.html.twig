{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('modules/itrblueboost/views/css/admin-common.css') }}">
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-header-title">
                <i class="material-icons">image</i>
                {{ 'Generated Images'|trans({}, 'Modules.Itrblueboost.Admin') }}
                <span class="badge badge-primary ml-2">{{ totalImages }}</span>
            </h3>
        </div>
        <div class="card-body">
            {% include '@Modules/itrblueboost/views/templates/admin/_partials/_filter_status.html.twig' with {
                statusFilter: statusFilter,
                currentLimit: currentLimit,
            } only %}

            {% if images|length > 0 %}
                <div class="image-grid">
                    {% for image in images %}
                        <div class="image-card" id="image-card-{{ image.id_itrblueboost_product_image }}">
                            {% if image.url %}
                                <img src="{{ image.url }}" alt="Image {{ image.id_itrblueboost_product_image }}" loading="lazy">
                            {% else %}
                                <div style="height: 200px; background: #f5f5f5; display: flex; align-items: center; justify-content: center;">
                                    <i class="material-icons" style="font-size: 48px; color: #ccc;">image_not_supported</i>
                                </div>
                            {% endif %}
                            <div class="image-card-body">
                                <div class="image-card-product">
                                    <a href="{{ path('admin_product_form', {id: image.id_product}) }}" target="_blank" title="{{ image.product_name }}">
                                        {{ image.product_reference|default('N/A') }}
                                    </a>
                                    <span class="product-id">(ID: {{ image.id_product }})</span>
                                </div>
                                <div class="image-card-info">
                                    <span class="status-badge status-{{ image.status }}">{{ image.status }}</span>
                                    <span>{{ image.date_add|date('d/m/Y H:i') }}</span>
                                </div>
                                <div class="image-card-actions">
                                    {% if image.status == 'pending' %}
                                        <button type="button" class="btn btn-sm btn-success btn-accept"
                                                data-url="{{ path('itrblueboost_admin_generated_images_accept', {imageId: image.id_itrblueboost_product_image}) }}"
                                                data-id="{{ image.id_itrblueboost_product_image }}"
                                                title="{{ 'Accept'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">check</i> {{ 'Accept'|trans({}, 'Admin.Actions') }}
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger btn-reject"
                                                data-url="{{ path('itrblueboost_admin_generated_images_reject', {imageId: image.id_itrblueboost_product_image}) }}"
                                                data-id="{{ image.id_itrblueboost_product_image }}"
                                                title="{{ 'Reject'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">close</i> {{ 'Reject'|trans({}, 'Admin.Actions') }}
                                        </button>
                                    {% else %}
                                        <button type="button" class="btn btn-sm btn-outline-danger btn-delete"
                                                data-url="{{ path('itrblueboost_admin_generated_images_delete', {imageId: image.id_itrblueboost_product_image}) }}"
                                                data-id="{{ image.id_itrblueboost_product_image }}"
                                                title="{{ 'Delete'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">delete</i> {{ 'Delete'|trans({}, 'Admin.Actions') }}
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% include '@Modules/itrblueboost/views/templates/admin/_partials/_pagination.html.twig' with {
                    routeName: 'itrblueboost_admin_generated_images',
                    routeParams: {status: statusFilter},
                    currentPage: currentPage,
                    totalPages: totalPages,
                    currentLimit: currentLimit,
                } only %}
            {% else %}
                <div class="empty-state">
                    <i class="material-icons">photo_library</i>
                    <h4>{{ 'No images generated yet'|trans({}, 'Modules.Itrblueboost.Admin') }}</h4>
                    <p class="text-muted">{{ 'Generated images will appear here.'|trans({}, 'Modules.Itrblueboost.Admin') }}</p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="toast-container" id="toastContainer"></div>

    {% include '@Modules/itrblueboost/views/templates/admin/_partials/_lightbox.html.twig' %}

    {% include '@Modules/itrblueboost/views/templates/admin/_partials/_reject_modal.html.twig' with {
        rejectTitle: 'Reject Image'|trans({}, 'Modules.Itrblueboost.Admin'),
    } only %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function() {
            'use strict';

            var rejectUrl = '';
            var rejectImageId = 0;
            var rejectModalEl = document.getElementById('rejectModal');
            var rejectModalBackdrop = null;
            var toastContainer = document.getElementById('toastContainer');

            function showToast(message, type) {
                var toast = document.createElement('div');
                toast.className = 'toast-notification toast-' + (type || 'success');
                toast.innerHTML = '<i class="material-icons">' + (type === 'error' ? 'error' : 'check_circle') + '</i> ' + message;
                toastContainer.appendChild(toast);

                setTimeout(function() { toast.classList.add('show'); }, 10);
                setTimeout(function() {
                    toast.classList.remove('show');
                    setTimeout(function() { toast.remove(); }, 300);
                }, 4000);
            }

            function showModal() {
                rejectModalEl.style.display = 'block';
                rejectModalEl.classList.add('show');
                document.body.classList.add('modal-open');

                rejectModalBackdrop = document.createElement('div');
                rejectModalBackdrop.className = 'modal-backdrop fade show';
                document.body.appendChild(rejectModalBackdrop);

                rejectModalBackdrop.addEventListener('click', hideModal);
                document.addEventListener('keydown', handleEscapeKey);
            }

            function hideModal() {
                rejectModalEl.style.display = 'none';
                rejectModalEl.classList.remove('show');
                document.body.classList.remove('modal-open');

                if (rejectModalBackdrop && rejectModalBackdrop.parentNode) {
                    rejectModalBackdrop.parentNode.removeChild(rejectModalBackdrop);
                    rejectModalBackdrop = null;
                }

                document.removeEventListener('keydown', handleEscapeKey);

                var confirmBtn = document.getElementById('confirmReject');
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = '{{ 'Reject'|trans({}, 'Admin.Actions') }}';
            }

            function handleEscapeKey(e) {
                if (e.key === 'Escape' || e.keyCode === 27) {
                    hideModal();
                }
            }

            var closeButtons = rejectModalEl.querySelectorAll('[data-dismiss="modal"], .close');
            closeButtons.forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    hideModal();
                });
            });

            // Filter
            document.getElementById('statusFilter').addEventListener('change', function() {
                var url = new URL(window.location.href);
                if (this.value) {
                    url.searchParams.set('status', this.value);
                } else {
                    url.searchParams.delete('status');
                }
                url.searchParams.delete('page');
                window.location.href = url.toString();
            });

            document.getElementById('limitFilter').addEventListener('change', function() {
                var url = new URL(window.location.href);
                url.searchParams.set('limit', this.value);
                url.searchParams.delete('page');
                window.location.href = url.toString();
            });

            // Lightbox
            var lightbox = document.getElementById('imageLightbox');
            var lightboxImg = document.getElementById('lightboxImage');
            var lightboxClose = document.querySelector('.image-lightbox-close');

            document.querySelectorAll('.image-card img').forEach(function(img) {
                img.addEventListener('click', function(e) {
                    e.preventDefault();
                    lightboxImg.src = this.src;
                    lightbox.classList.add('active');
                    document.body.style.overflow = 'hidden';
                });
            });

            function closeLightbox() {
                lightbox.classList.remove('active');
                document.body.style.overflow = '';
            }

            lightbox.addEventListener('click', closeLightbox);
            lightboxClose.addEventListener('click', closeLightbox);
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && lightbox.classList.contains('active')) {
                    closeLightbox();
                }
            });

            // Handle simple image actions (accept, delete)
            function handleImageAction(button, confirmMessage) {
                if (confirmMessage && !confirm(confirmMessage)) {
                    return;
                }

                var url = button.dataset.url;
                var id = button.dataset.id;
                var card = document.getElementById('image-card-' + id);

                button.disabled = true;
                var originalHtml = button.innerHTML;
                button.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

                fetch(url, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .then(function(response) { return response.json(); })
                .then(function(data) {
                    if (data.success) {
                        if (card) {
                            card.style.transition = 'opacity 0.3s';
                            card.style.opacity = '0';
                            setTimeout(function() {
                                window.location.reload();
                            }, 300);
                        }
                    } else {
                        alert(data.message || 'Error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    }
                })
                .catch(function() {
                    alert('Connection error');
                    button.disabled = false;
                    button.innerHTML = originalHtml;
                });
            }

            // Accept buttons
            document.querySelectorAll('.btn-accept').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    handleImageAction(this, null);
                });
            });

            // Reject buttons - open modal
            document.querySelectorAll('.btn-reject').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    rejectImageId = this.dataset.id;
                    rejectUrl = this.dataset.url;
                    document.getElementById('rejectionReason').value = '';
                    showModal();
                });
            });

            // Confirm reject
            document.getElementById('confirmReject').addEventListener('click', function(e) {
                e.preventDefault();

                var rejectionReason = document.getElementById('rejectionReason').value;
                var button = this;

                button.disabled = true;
                var originalHtml = button.innerHTML;
                button.innerHTML = '<span class="spinner-border spinner-border-sm"></span> {{ 'Processing...'|trans({}, 'Admin.Global') }}';

                var formData = new FormData();
                formData.append('rejection_reason', rejectionReason);

                fetch(rejectUrl, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                })
                .then(function(response) { return response.json(); })
                .then(function(data) {
                    if (data.success) {
                        hideModal();
                        showToast('{{ 'Rejection reason sent successfully.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'success');
                        var card = document.getElementById('image-card-' + rejectImageId);
                        if (card) {
                            card.style.transition = 'opacity 0.3s';
                            card.style.opacity = '0';
                            setTimeout(function() { card.remove(); }, 300);
                        }
                    } else {
                        showToast(data.message || '{{ 'An error occurred.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    }
                })
                .catch(function() {
                    showToast('{{ 'Connection error.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'error');
                    button.disabled = false;
                    button.innerHTML = originalHtml;
                });
            });

            // Delete buttons
            document.querySelectorAll('.btn-delete').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    handleImageAction(this, '{{ 'Permanently delete this image?'|trans({}, 'Modules.Itrblueboost.Admin') }}');
                });
            });
        })();
    </script>
{% endblock %}
