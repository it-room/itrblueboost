{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('modules/itrblueboost/views/css/admin-common.css') }}">
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-header-title">
                <i class="material-icons">help_outline</i>
                {{ 'All Category FAQs'|trans({}, 'Modules.Itrblueboost.Admin') }}
                <span class="badge badge-primary ml-2">{{ totalFaqs }}</span>
            </h3>
        </div>
        <div class="card-body">
            {% include '@Modules/itrblueboost/views/templates/admin/_partials/_filter_status.html.twig' with {
                statusFilter: statusFilter,
                currentLimit: currentLimit,
            } only %}

            {% if faqs|length > 0 %}
                <div class="faq-grid">
                    {% for faq in faqs %}
                        <div class="faq-card" id="faq-card-{{ faq.id_itrblueboost_category_faq }}">
                            <div class="faq-card-header">
                                <div class="faq-card-category">
                                    <a href="{{ path('admin_categories_edit', {categoryId: faq.id_category}) }}" target="_blank" title="{{ faq.category_name }}">
                                        {{ faq.category_name|default('Category') }}
                                    </a>
                                    <span class="category-id">(ID: {{ faq.id_category }})</span>
                                </div>
                                <div class="badge-status-row">
                                    <span class="status-badge status-{{ faq.status }}" id="status-{{ faq.id_itrblueboost_category_faq }}">
                                        {{ faq.status }}
                                    </span>
                                    {% if faq.status == 'accepted' %}
                                        <span class="status-badge status-{{ faq.active ? 'active' : 'inactive' }}" id="active-status-{{ faq.id_itrblueboost_category_faq }}">
                                            {{ faq.active ? 'Actif'|trans({}, 'Admin.Global') : 'Inactif'|trans({}, 'Admin.Global') }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="faq-card-body">
                                <div class="faq-question">{{ faq.question|default('-') }}</div>
                                <div class="faq-answer">{{ faq.answer|default('-')|striptags }}</div>
                            </div>
                            <div class="faq-card-footer">
                                <div class="faq-card-info">
                                    {{ faq.date_add|date('d/m/Y H:i') }}
                                </div>
                                <div class="faq-card-actions">
                                    {% if faq.status == 'pending' %}
                                        <button type="button"
                                                class="btn-action btn-accept"
                                                data-id="{{ faq.id_itrblueboost_category_faq }}"
                                                data-url="{{ path('itrblueboost_admin_all_category_faqs_accept', {faqId: faq.id_itrblueboost_category_faq}) }}"
                                                title="{{ 'Accept'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">check</i>
                                        </button>
                                        <button type="button"
                                                class="btn-action btn-reject"
                                                data-id="{{ faq.id_itrblueboost_category_faq }}"
                                                data-url="{{ path('itrblueboost_admin_all_category_faqs_reject', {faqId: faq.id_itrblueboost_category_faq}) }}"
                                                title="{{ 'Reject'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">close</i>
                                        </button>
                                    {% endif %}
                                    {% if faq.status == 'accepted' %}
                                        <button type="button"
                                                class="btn-action btn-toggle-{{ faq.active ? 'active' : 'inactive' }}"
                                                id="toggle-btn-{{ faq.id_itrblueboost_category_faq }}"
                                                data-id="{{ faq.id_itrblueboost_category_faq }}"
                                                data-url="{{ path('itrblueboost_admin_all_category_faqs_toggle', {faqId: faq.id_itrblueboost_category_faq}) }}"
                                                title="{{ faq.active ? 'Disable'|trans({}, 'Admin.Actions') : 'Enable'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">{{ faq.active ? 'visibility_off' : 'visibility' }}</i>
                                        </button>
                                    {% endif %}
                                    <a href="{{ path('itrblueboost_admin_category_faq_edit', {id_category: faq.id_category, faqId: faq.id_itrblueboost_category_faq}) }}"
                                       class="btn-action btn-edit"
                                       title="{{ 'Edit'|trans({}, 'Admin.Actions') }}">
                                        <i class="material-icons">edit</i>
                                    </a>
                                    <button type="button"
                                            class="btn-action btn-delete"
                                            data-id="{{ faq.id_itrblueboost_category_faq }}"
                                            data-url="{{ path('itrblueboost_admin_all_category_faqs_delete', {faqId: faq.id_itrblueboost_category_faq}) }}"
                                            title="{{ 'Delete'|trans({}, 'Admin.Actions') }}">
                                        <i class="material-icons">delete</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% include '@Modules/itrblueboost/views/templates/admin/_partials/_pagination.html.twig' with {
                    routeName: 'itrblueboost_admin_all_category_faqs',
                    routeParams: {status: statusFilter},
                    currentPage: currentPage,
                    totalPages: totalPages,
                    currentLimit: currentLimit,
                } only %}
            {% else %}
                <div class="empty-state">
                    <i class="material-icons">quiz</i>
                    <h4>{{ 'No category FAQs generated yet'|trans({}, 'Modules.Itrblueboost.Admin') }}</h4>
                    <p class="text-muted">{{ 'Generated FAQs will appear here.'|trans({}, 'Modules.Itrblueboost.Admin') }}</p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="toast-container" id="toastContainer"></div>

    {% include '@Modules/itrblueboost/views/templates/admin/_partials/_reject_modal.html.twig' with {
        rejectTitle: 'Reject FAQ'|trans({}, 'Modules.Itrblueboost.Admin'),
    } only %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function() {
            'use strict';

            var rejectUrl = '';
            var rejectFaqId = 0;
            var rejectModalEl = document.getElementById('rejectModal');
            var rejectModalBackdrop = null;
            var toastContainer = document.getElementById('toastContainer');

            function showToast(message, type) {
                var toast = document.createElement('div');
                toast.className = 'toast-notification toast-' + (type || 'success');
                toast.innerHTML = '<i class="material-icons">' + (type === 'error' ? 'error' : 'check_circle') + '</i> ' + message;
                toastContainer.appendChild(toast);

                setTimeout(function() { toast.classList.add('show'); }, 10);
                setTimeout(function() {
                    toast.classList.remove('show');
                    setTimeout(function() { toast.remove(); }, 300);
                }, 4000);
            }

            function showModal() {
                rejectModalEl.style.display = 'block';
                rejectModalEl.classList.add('show');
                document.body.classList.add('modal-open');

                rejectModalBackdrop = document.createElement('div');
                rejectModalBackdrop.className = 'modal-backdrop fade show';
                document.body.appendChild(rejectModalBackdrop);

                rejectModalBackdrop.addEventListener('click', hideModal);
                document.addEventListener('keydown', handleEscapeKey);
            }

            function hideModal() {
                rejectModalEl.style.display = 'none';
                rejectModalEl.classList.remove('show');
                document.body.classList.remove('modal-open');

                if (rejectModalBackdrop && rejectModalBackdrop.parentNode) {
                    rejectModalBackdrop.parentNode.removeChild(rejectModalBackdrop);
                    rejectModalBackdrop = null;
                }

                document.removeEventListener('keydown', handleEscapeKey);

                var confirmBtn = document.getElementById('confirmReject');
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = '{{ 'Reject'|trans({}, 'Admin.Actions') }}';
            }

            function handleEscapeKey(e) {
                if (e.key === 'Escape' || e.keyCode === 27) {
                    hideModal();
                }
            }

            var closeButtons = rejectModalEl.querySelectorAll('[data-dismiss="modal"], .close');
            closeButtons.forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    hideModal();
                });
            });

            // Filter
            document.getElementById('statusFilter').addEventListener('change', function() {
                var url = new URL(window.location.href);
                if (this.value) {
                    url.searchParams.set('status', this.value);
                } else {
                    url.searchParams.delete('status');
                }
                url.searchParams.delete('page');
                window.location.href = url.toString();
            });

            document.getElementById('limitFilter').addEventListener('change', function() {
                var url = new URL(window.location.href);
                url.searchParams.set('limit', this.value);
                url.searchParams.delete('page');
                window.location.href = url.toString();
            });

            // Accept
            document.querySelectorAll('.btn-accept').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    var url = this.dataset.url;
                    var button = this;

                    button.disabled = true;
                    var originalHtml = button.innerHTML;
                    button.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

                    fetch(url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .then(function(response) { return response.json(); })
                    .then(function(data) {
                        if (data.success) {
                            window.location.reload();
                        } else {
                            alert(data.message || 'Error');
                            button.disabled = false;
                            button.innerHTML = originalHtml;
                        }
                    })
                    .catch(function() {
                        alert('Connection error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    });
                });
            });

            // Reject - open modal
            document.querySelectorAll('.btn-reject').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    rejectFaqId = this.dataset.id;
                    rejectUrl = this.dataset.url;
                    document.getElementById('rejectionReason').value = '';
                    showModal();
                });
            });

            // Confirm reject
            document.getElementById('confirmReject').addEventListener('click', function(e) {
                e.preventDefault();

                var rejectionReason = document.getElementById('rejectionReason').value;
                var button = this;

                button.disabled = true;
                var originalHtml = button.innerHTML;
                button.innerHTML = '<span class="spinner-border spinner-border-sm"></span> {{ 'Processing...'|trans({}, 'Admin.Global') }}';

                var formData = new FormData();
                formData.append('rejection_reason', rejectionReason);

                fetch(rejectUrl, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                })
                .then(function(response) { return response.json(); })
                .then(function(data) {
                    if (data.success) {
                        hideModal();
                        showToast('{{ 'Rejection reason sent successfully.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'success');
                        var card = document.getElementById('faq-card-' + rejectFaqId);
                        if (card) {
                            card.style.transition = 'opacity 0.3s';
                            card.style.opacity = '0';
                            setTimeout(function() { card.remove(); }, 300);
                        }
                    } else {
                        showToast(data.message || '{{ 'An error occurred.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    }
                })
                .catch(function() {
                    showToast('{{ 'Connection error.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'error');
                    button.disabled = false;
                    button.innerHTML = originalHtml;
                });
            });

            // Toggle active
            document.querySelectorAll('.btn-action[data-url*="toggle"]').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    var id = this.dataset.id;
                    var url = this.dataset.url;
                    var button = this;

                    fetch(url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .then(function(response) { return response.json(); })
                    .then(function(data) {
                        if (data.success) {
                            var statusBadge = document.getElementById('active-status-' + id);
                            var icon = button.querySelector('i');

                            if (data.active) {
                                statusBadge.className = 'status-badge status-active';
                                statusBadge.textContent = 'Actif';
                                button.className = 'btn-action btn-toggle-active';
                                icon.textContent = 'visibility_off';
                            } else {
                                statusBadge.className = 'status-badge status-inactive';
                                statusBadge.textContent = 'Inactif';
                                button.className = 'btn-action btn-toggle-inactive';
                                icon.textContent = 'visibility';
                            }
                        } else {
                            alert(data.message || 'Error');
                        }
                    })
                    .catch(function() {
                        alert('Connection error');
                    });
                });
            });

            // Delete
            document.querySelectorAll('.btn-delete').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    if (!confirm('{{ 'Are you sure you want to delete this FAQ?'|trans({}, 'Modules.Itrblueboost.Admin') }}')) {
                        return;
                    }

                    var id = this.dataset.id;
                    var url = this.dataset.url;
                    var card = document.getElementById('faq-card-' + id);

                    this.disabled = true;
                    var originalHtml = this.innerHTML;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                    var button = this;

                    fetch(url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .then(function(response) { return response.json(); })
                    .then(function(data) {
                        if (data.success) {
                            if (card) {
                                card.style.transition = 'opacity 0.3s';
                                card.style.opacity = '0';
                                setTimeout(function() { card.remove(); }, 300);
                            }
                        } else {
                            alert(data.message || 'Error');
                            button.disabled = false;
                            button.innerHTML = originalHtml;
                        }
                    })
                    .catch(function() {
                        alert('Connection error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    });
                });
            });
        })();
    </script>
{% endblock %}
