{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('modules/itrblueboost/views/css/admin-common.css') }}">
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-header-title">
                <i class="material-icons">description</i>
                {{ 'All Product Contents'|trans({}, 'Modules.Itrblueboost.Admin') }}
                <span class="badge badge-primary ml-2">{{ totalContents }}</span>
            </h3>
        </div>
        <div class="card-body">
            {% include '@Modules/itrblueboost/views/templates/admin/_partials/_filter_status.html.twig' with {
                statusFilter: statusFilter,
                currentLimit: currentLimit,
            } only %}

            {% if contents|length > 0 %}
                <div class="content-grid">
                    {% for content in contents %}
                        <div class="content-card" id="content-card-{{ content.id_itrblueboost_product_content }}">
                            <div class="content-card-header">
                                <div class="content-card-product">
                                    <a href="{{ path('admin_product_form', {id: content.id_product}) }}" target="_blank" title="{{ content.product_name }}">
                                        {{ content.product_reference|default('N/A') }}
                                    </a>
                                    <span class="product-id">(ID: {{ content.id_product }})</span>
                                </div>
                                <div class="badge-status-row">
                                    <span class="status-badge status-{{ content.status }}" id="status-{{ content.id_itrblueboost_product_content }}">
                                        {{ content.status }}
                                    </span>
                                    {% if content.status == 'accepted' %}
                                        <span class="status-badge status-{{ content.active ? 'active' : 'inactive' }}" id="active-status-{{ content.id_itrblueboost_product_content }}">
                                            {{ content.active ? 'Actif'|trans({}, 'Admin.Global') : 'Inactif'|trans({}, 'Admin.Global') }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="content-card-body">
                                <span class="content-type-badge">
                                    {{ content.content_type == 'description_short' ? 'Short desc.'|trans({}, 'Modules.Itrblueboost.Admin') : 'Description'|trans({}, 'Modules.Itrblueboost.Admin') }}
                                </span>
                                <div class="content-text">{{ content.generated_content|default('-')|striptags|slice(0, 150) }}{% if content.generated_content|length > 150 %}...{% endif %}</div>
                            </div>
                            <div class="content-card-footer">
                                <div class="content-card-info">
                                    {{ content.date_add|date('d/m/Y H:i') }}
                                </div>
                                <div class="content-card-actions">
                                    {% if content.status == 'pending' %}
                                        <button type="button"
                                                class="btn-action btn-accept"
                                                data-id="{{ content.id_itrblueboost_product_content }}"
                                                data-url="{{ path('itrblueboost_admin_all_product_contents_accept', {id: content.id_itrblueboost_product_content}) }}"
                                                title="{{ 'Accept'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">check</i>
                                        </button>
                                        <button type="button"
                                                class="btn-action btn-reject"
                                                data-id="{{ content.id_itrblueboost_product_content }}"
                                                data-url="{{ path('itrblueboost_admin_all_product_contents_reject', {id: content.id_itrblueboost_product_content}) }}"
                                                title="{{ 'Reject'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">close</i>
                                        </button>
                                    {% endif %}
                                    {% if content.status == 'accepted' %}
                                        <button type="button"
                                                class="btn-action btn-toggle-{{ content.active ? 'active' : 'inactive' }}"
                                                id="toggle-btn-{{ content.id_itrblueboost_product_content }}"
                                                data-id="{{ content.id_itrblueboost_product_content }}"
                                                data-url="{{ path('itrblueboost_admin_all_product_contents_toggle', {id: content.id_itrblueboost_product_content}) }}"
                                                title="{{ content.active ? 'Disable'|trans({}, 'Admin.Actions') : 'Enable'|trans({}, 'Admin.Actions') }}">
                                            <i class="material-icons">{{ content.active ? 'visibility_off' : 'visibility' }}</i>
                                        </button>
                                    {% endif %}
                                    <a href="{{ path('itrblueboost_admin_product_content_edit', {id_product: content.id_product, contentId: content.id_itrblueboost_product_content}) }}"
                                       class="btn-action btn-edit"
                                       title="{{ 'Edit'|trans({}, 'Admin.Actions') }}">
                                        <i class="material-icons">edit</i>
                                    </a>
                                    <button type="button"
                                            class="btn-action btn-delete"
                                            data-id="{{ content.id_itrblueboost_product_content }}"
                                            data-url="{{ path('itrblueboost_admin_all_product_contents_delete', {id: content.id_itrblueboost_product_content}) }}"
                                            title="{{ 'Delete'|trans({}, 'Admin.Actions') }}">
                                        <i class="material-icons">delete</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% include '@Modules/itrblueboost/views/templates/admin/_partials/_pagination.html.twig' with {
                    routeName: 'itrblueboost_admin_all_product_contents',
                    routeParams: {status: statusFilter},
                    currentPage: currentPage,
                    totalPages: totalPages,
                    currentLimit: currentLimit,
                } only %}
            {% else %}
                <div class="empty-state">
                    <i class="material-icons">description</i>
                    <h4>{{ 'No product contents generated yet'|trans({}, 'Modules.Itrblueboost.Admin') }}</h4>
                    <p class="text-muted">{{ 'Generated contents will appear here.'|trans({}, 'Modules.Itrblueboost.Admin') }}</p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="toast-container" id="toastContainer"></div>

    {% include '@Modules/itrblueboost/views/templates/admin/_partials/_reject_modal.html.twig' with {
        rejectTitle: 'Reject Content'|trans({}, 'Modules.Itrblueboost.Admin'),
    } only %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function() {
            'use strict';

            var rejectUrl = '';
            var rejectContentId = 0;
            var toastContainer = document.getElementById('toastContainer');

            function showToast(message, type) {
                var toast = document.createElement('div');
                toast.className = 'toast-notification toast-' + (type || 'success');
                toast.innerHTML = '<i class="material-icons">' + (type === 'error' ? 'error' : 'check_circle') + '</i> ' + message;
                toastContainer.appendChild(toast);

                setTimeout(function() { toast.classList.add('show'); }, 10);
                setTimeout(function() {
                    toast.classList.remove('show');
                    setTimeout(function() { toast.remove(); }, 300);
                }, 4000);
            }

            function showModal() {
                $('#rejectModal').modal('show');
            }

            function hideModal() {
                $('#rejectModal').modal('hide');
            }

            $('#rejectModal').on('hidden.bs.modal', function() {
                var confirmBtn = document.getElementById('confirmReject');
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = '<i class="material-icons">cancel</i> {{ 'Reject'|trans({}, 'Admin.Actions') }}';
            });

            // Filter
            document.getElementById('statusFilter').addEventListener('change', function() {
                var url = new URL(window.location.href);
                if (this.value) {
                    url.searchParams.set('status', this.value);
                } else {
                    url.searchParams.delete('status');
                }
                url.searchParams.delete('page');
                window.location.href = url.toString();
            });

            document.getElementById('limitFilter').addEventListener('change', function() {
                var url = new URL(window.location.href);
                url.searchParams.set('limit', this.value);
                url.searchParams.delete('page');
                window.location.href = url.toString();
            });

            // Accept
            document.querySelectorAll('.btn-accept').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    var url = this.dataset.url;
                    var button = this;

                    button.disabled = true;
                    var originalHtml = button.innerHTML;
                    button.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

                    fetch(url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .then(function(response) { return response.json(); })
                    .then(function(data) {
                        if (data.success) {
                            window.location.reload();
                        } else {
                            alert(data.message || 'Error');
                            button.disabled = false;
                            button.innerHTML = originalHtml;
                        }
                    })
                    .catch(function() {
                        alert('Connection error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    });
                });
            });

            // Reject - open modal
            document.querySelectorAll('.btn-reject').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    rejectContentId = this.dataset.id;
                    rejectUrl = this.dataset.url;
                    document.getElementById('rejectionReason').value = '';
                    showModal();
                });
            });

            // Confirm reject
            document.getElementById('confirmReject').addEventListener('click', function(e) {
                e.preventDefault();

                var rejectionReason = document.getElementById('rejectionReason').value;
                var button = this;

                button.disabled = true;
                var originalHtml = button.innerHTML;
                button.innerHTML = '<span class="spinner-border spinner-border-sm"></span> {{ 'Processing...'|trans({}, 'Admin.Global') }}';

                var formData = new FormData();
                formData.append('rejection_reason', rejectionReason);

                fetch(rejectUrl, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                })
                .then(function(response) { return response.json(); })
                .then(function(data) {
                    if (data.success) {
                        hideModal();
                        showToast('{{ 'Rejection reason sent successfully.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'success');
                        var card = document.getElementById('content-card-' + rejectContentId);
                        if (card) {
                            card.style.transition = 'opacity 0.3s';
                            card.style.opacity = '0';
                            setTimeout(function() { card.remove(); }, 300);
                        }
                    } else {
                        showToast(data.message || '{{ 'An error occurred.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    }
                })
                .catch(function() {
                    showToast('{{ 'Connection error.'|trans({}, 'Modules.Itrblueboost.Admin') }}', 'error');
                    button.disabled = false;
                    button.innerHTML = originalHtml;
                });
            });

            // Toggle active
            document.querySelectorAll('.btn-action[data-url*="toggle"]').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    var id = this.dataset.id;
                    var url = this.dataset.url;
                    var button = this;

                    fetch(url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .then(function(response) { return response.json(); })
                    .then(function(data) {
                        if (data.success) {
                            var statusBadge = document.getElementById('active-status-' + id);
                            var icon = button.querySelector('i');

                            if (data.active) {
                                statusBadge.className = 'status-badge status-active';
                                statusBadge.textContent = 'Actif';
                                button.className = 'btn-action btn-toggle-active';
                                icon.textContent = 'visibility_off';
                            } else {
                                statusBadge.className = 'status-badge status-inactive';
                                statusBadge.textContent = 'Inactif';
                                button.className = 'btn-action btn-toggle-inactive';
                                icon.textContent = 'visibility';
                            }
                        } else {
                            alert(data.message || 'Error');
                        }
                    })
                    .catch(function() {
                        alert('Connection error');
                    });
                });
            });

            // Delete
            document.querySelectorAll('.btn-delete').forEach(function(btn) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    if (!confirm('{{ 'Are you sure you want to delete this content?'|trans({}, 'Modules.Itrblueboost.Admin') }}')) {
                        return;
                    }

                    var id = this.dataset.id;
                    var url = this.dataset.url;
                    var card = document.getElementById('content-card-' + id);

                    this.disabled = true;
                    var originalHtml = this.innerHTML;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                    var button = this;

                    fetch(url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                    .then(function(response) { return response.json(); })
                    .then(function(data) {
                        if (data.success) {
                            if (card) {
                                card.style.transition = 'opacity 0.3s';
                                card.style.opacity = '0';
                                setTimeout(function() { card.remove(); }, 300);
                            }
                        } else {
                            alert(data.message || 'Error');
                            button.disabled = false;
                            button.innerHTML = originalHtml;
                        }
                    })
                    .catch(function() {
                        alert('Connection error');
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                    });
                });
            });
        })();
    </script>
{% endblock %}
